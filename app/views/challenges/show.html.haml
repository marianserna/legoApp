%h2  #{@challenge.challenger.name} VS. #{@challenge.challengee.name}

.challenger_pic
  = image_tag @challenge.challenger.image.url(:medium)

.challengee_pic
  = image_tag @challenge.challengee.image.url(:medium)


-# Pending to finish
- if @challenge.challenge_status == 'Pending'
  - if current_user == @challenge.challenger
    Still waiting for a response.
  - else
    = link_to 'Accept', new_challenge_acceptance_url(@challenge)
    = link_to 'Decline', challenge_declines_url(@challenge), method: :post
- elsif @challenge.challenge_status == 'Completed'
  Show winner
- else
  Declined
